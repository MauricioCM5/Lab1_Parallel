CXX = g++
CXXFLAGS = -lncurses -O2

TARGETS = exercise_1.out exercise_2.out

all: $(TARGETS)

exercise_1.out: exercise_1.cpp
	$(CXX) -o $@ $< $(CXXFLAGS)

exercise_2.out: exercise_2.cpp
	$(CXX) -o $@ $< $(CXXFLAGS)

exercise_1: exercise_1.out
	./$<

exercise_2: exercise_2.out
	./$<

clean:
	rm -f $(TARGETS)

